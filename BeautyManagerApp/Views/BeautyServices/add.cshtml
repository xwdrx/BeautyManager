@*adding a new entity to the database using a form*@
@model BeautyServicesViewModel
@{
    ViewData["Title"] = "Beauty Services page";
}
<body>
    <div class="container">
        <div class="row">
            <div class="=col w-50 p-3 ">
                <form asp-controller="Cosmetology" asp-action="Add">
                    <div class="form-group form-outline mb-4"> 
                    
                        <input type="text" name="Name" class="form-control" placeholder="Enter name">
                    </div>  
                    <div class="form-group form-outline mb-4">
                 
                        <input type="text" name="Description" class="form-control" placeholder="Description">
                    </div>
                    <div class="form-group form-outline mb-4">
                 
                        <input type="text" name="Price" class="form-control" placeholder="Enter Price">
                    </div>
                  
                        <button type="submit" class="btn btn-primary btn-success w-100 p-3">Add</button>
        
                </form> 
            </div>
            <div class="col w-50 p-3">
            <img src="wwwroot/css/pictures/pct1.jpg"
                    class="img-fluid rounded-1" >
            </div>
        </div>
    </div>
 </body>


