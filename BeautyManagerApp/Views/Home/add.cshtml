@*adding a new entity to the database using a form*@

@model BeautySpecialistViewModel
@{
    ViewData["Title"] = "Home page";
}
@section Styles {
    <link href="@Url.Content("~/css/addStyle.css")" rel="stylesheet" type="text/css" />
}
<body>
    <div class="container">
        <div class="row">
            <div class="=col w-50 p-3 ">
                <form asp-controller="Home" asp-action="Add">
                    <div class="form-group form-outline mb-4"> 
                    
                        <input type="text" name="FirstName" class="form-control" placeholder="Enter First Name">
                    </div>  
                    <div class="form-group form-outline mb-4">
                 
                        <input type="text" name="LastName" class="form-control" placeholder="Enter Last Name">
                    </div>
                    <div class="form-group form-outline mb-4">
                 
                        <input type="text" name="PhoneNumber" class="form-control" placeholder="Enter phone number">
                    </div>
                    <div class="form-group form-outline mb-4">
                  
                        <input type="email" name="Email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div >
                        <button type="submit" class="btn btn-primary btn-success w-100 p-3">Add</button>
        
                </form> 
            </div>
            <div class="col w-50 p-3">
            <img src="wwwroot/css/pictures/pct1.jpg"
                    class="img-fluid rounded-1" >
            </div>
        </div>
    </div>
 </body>